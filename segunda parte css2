/*Estilos Generales*/
body{
    /*Definimos un tipo de letra*/
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    /*Color de fondo suave*/
    background-color: #f4f4f9;
    /*Eliminamos el margen predeterminado*/
    margin: 0;
    /*Eliminamos el paddin predeterminado*/
    padding: 0;
    display: flex;
    /*Centra el contenido de forma horizontal*/
    justify-content: center;
    /*Centra el contenido de forma vertical*/
    align-items: center;
    /*Hace que el body ocupe toda la altura de la pantalla*/
    height: 100lvh;
}

/*Contenedor del formulario*/
.form-container{
    /*Fondo blanco para el contenedor*/
    background-color: white;
    /*Bordes redondeados*/
    border-radius: 8px;
    /*Espaciado interno*/
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    /*Ancho fijo para el formulario*/
    width: 300px;
}

/*Estilos para los titulos*/
h1{
    /*Centro el texto*/
    text-align: center;
    /*Color oscuro para el texto*/
    color: #333;
}

/*Estilos para las etiquetas de los campos*/
label{
    /*Hacen que las etiquetas esten en linea bloque*/
    display: block;
    /*Apicar un espacio debajo de cada etiqueta*/
    margin-bottom: 5px;
    /*Aplicar un color de texto gris*/
    color: #555;
}

/*Estilos para los campos de entrada*/
input[type="text"],
input[type="email"],
input[type="number"], select{
    /*Hace que los campos ocupen todo el ancho disponible*/
    width: 100%;
    /*Relleno interno para los campos*/
    padding: 10px;
    /*Espacio entre los campos*/
    margin-bottom: 15px;
    /*Aplicar un borde gris para los campos*/
    border: 1px solid #ccc;
    /*Aplicar bordes ligeramente redondeados*/
    border-radius: 4px;
}

/*Estilo para el boton de envio*/
button{
    /*Color verde*/
    background-color: #4caf50;
    /*Texto blanco*/
    color: white;
    /*Espaciado interno*/
    padding: 10px 20px;
    /*Sin border*/
    border: none;
    /*Bordes redondeados*/
    border-radius: 4px;
    /*Luego cambia el cursor del mouse al pasar por el*/
    cursor: pointer;
    /*Hace que el boton ocupe todo el espacio del ancho disponible*/
    width: 100%;
    /*Aumentamos el tama√±o de la fuente*/
    font-size: 16px;
}

button:hover{
    background-color: #45a049;
}
